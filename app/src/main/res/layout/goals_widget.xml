<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetRoot"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_bg_white_rounded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvWidgetTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ближайшая цель"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#000000" />

        <ProgressBar
            android:id="@+id/pbWidgetLoading"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pbWidgetProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="6dp"
        android:progress="0"
        android:max="100"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvWidgetTask1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Нет активных целей"
        android:textSize="13sp"
        android:paddingTop="6dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="#333333" />

    <TextView
        android:id="@+id/tvWidgetTask2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:paddingTop="2dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#666666"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvWidgetTask3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:paddingTop="2dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#666666"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:orientation="horizontal"
        android:gravity="end">

        <TextView
            android:id="@+id/btnWidgetAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="6dp"
            android:gravity="center"
            android:text="Создать"
            android:textColor="#000"
            android:background="#EEEEEE" />

        <TextView
            android:id="@+id/btnWidgetOpen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="6dp"
            android:gravity="center"
            android:layout_marginStart="6dp"
            android:text="Открыть"
            android:textColor="#000"
            android:background="#EEEEEE" />
    </LinearLayout>

</LinearLayout>
